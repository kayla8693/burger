<img width="300" height="200" class="image" src="/assets/img/burger.png">

<h1>Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">

        <div class="col-md-6" id="notDevoured">
            <ul style="list-style: none;">

                {{#each burgers}}
                {{#unless devoured}}

                <li class="notDevoured">
                
                   {{id}}. {{burger_name}}
                    

                    <button class="devour" data-id="{{id}}" data-devourstate=1>Devour it!</button>


                </li>
                {{/unless}}
                {{/each}}

            </ul>
        </div>


        <div class="col-md-6" id="devoured">

            <ul style="list-style: none;">

                {{#each burgers}}
                {{#if devoured}}

                <li class="devoured">
                    {{id}}. {{burger_name}}

                </li>

                {{/if}}
                {{/each}}

            </ul>

        </div>
    </div>

    <form class="create-form">
        <div class="form-group">
            <input type="text" id="newBurger" name="burgerInput">
        </div>

        <button type="submit">Submit</button>
    </form>



    <p>Enter a burger you would like to eat, then click the Submit button</p>
</div>
